    <TextField fx:id="login" text="Введите логин" VBox.vgrow="ALWAYS"/>
    <TextField fx:id="password" text="Введите пароль" VBox.vgrow="ALWAYS"/>
    <HBox VBox.vgrow="ALWAYS" >
        <Button onAction="#getQuestion" text="Вход" />
        <Button  text="Регистрация" />
    </HBox>
    <Label fx:id="messageError" VBox.vgrow="ALWAYS"/>
</VBox>
